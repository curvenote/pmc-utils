# PMC FTP Service Environment Variables
# Copy this file to .env and fill in your actual values
# The .env file is gitignored and will not be committed to the repo

# SFTP Server Configuration
FTP_HOST=your-sftp-host.example.com
FTP_PORT=22
FTP_USERNAME=your-username
FTP_PASSWORD=your-password

# Service Configuration
# Buffer size for streaming downloads (in KB)
# Options: 64, 128, 256, 512, 1024
# Default: 256KB (good balance of memory vs performance)
STREAM_BUFFER_KB=256

# Google Cloud Configuration (for deployment)
GCP_PROJECT=your-gcp-project-id
GCP_REGION=us-central1

# Local Development Port
PORT=8080
